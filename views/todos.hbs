<div class="container">
  <div class="well todos">
    {{> add}}
    <ul class="list-group">
      {{#each todos}}
      <li id="{{this._id}}" class="list-group-item">
        <input type="checkbox"  {{#if this.done}}checked{{/if}}>
        <span class="todo-text {{#if this.done}}checked{{/if}}" contenteditable="true">{{this.text}}</span>
        <a class="pull-right"><small><i class="glyphicon glyphicon-trash"></i></small></a>
      </li>
      {{/each}}
    </ul>
    {{> footer}}
  </div>
</div>
